<body>
  <div class="row">
    <p class='mr-auto col-sm-5'>My Discounts</p>
  </div>

  <p><%= link_to "Create New Discount", new_merchant_bulk_discount_path(@merchant) %></p>

  <ul class='mr-auto col-sm-4'>
    <% @merchant.bulk_discounts.each do |discount| %>
      <section id="discount-<%= discount.id %>">
          <li class='discount'><%= link_to "#{discount.percent_discount}% off on purchases of #{discount.quantity_threshold} items or more!", merchant_bulk_discount_path(@merchant, discount) %> <%= link_to "Delete Discount", merchant_bulk_discount_path(@merchant, discount), method: :delete %></li>
      </section>
    <% end %>
  </ul>

</body>
